{
  "manifest_version": 3,
  "name": "LinkBuddy",
  "version": "0.0.1",
  "permissions": ["scripting", "tabs", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "./background.js"
  },
  "action": {
    "default_title": "LinkBuddy",
    "default_popup": "./popup.html"
  }
}
