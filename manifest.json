{
  "manifest_version": 3,
  "name": "LinkBuddy",
  "version": "0.0.1",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["https://*.amazonaws.com/*", "https://api.openai.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*", "https://www.linkedin.in/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "LinkBuddy",
    "default_popup": "popup.html"
  }
}
