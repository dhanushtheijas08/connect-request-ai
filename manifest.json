{
  "manifest_version": 3,
  "name": "LinkBuddy",
  "version": "0.0.1",
  "description": "Generate LinkedIn connect request notes using LinkBuddy with OpenAI's GPT-3 ",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["scripting", "tabs", "activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "./background.js"
  },
  "action": {
    "default_title": "LinkBuddy",
    "default_popup": "./popup.html"
  },
  "about": {
    "homepage": "https://github.com/dhanushtheijas08/connect-request-ai",
    "version": "0.0.1",
    "credits": "Developed by dhanush theijas",
    "developer": {
      "name": "dhanush theijas",
      "url": "https://github.com/dhanushtheijas08"
    }
  }
}
